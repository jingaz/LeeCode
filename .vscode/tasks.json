{
    "tasks": [
        {   
            "type": "shell",
            "label": "compile",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-g",    // 生成和调试有关的信息
                "-Wall", // 开启额外警告
                "-static-libgcc",     // 静态链接libgcc，一般都会加上
                "-std=c11",
                "-lpthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}